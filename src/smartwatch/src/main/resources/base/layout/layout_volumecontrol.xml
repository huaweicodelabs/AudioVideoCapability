<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center"
    ohos:background_element="$color:splash_red"
   >
    <Text
        ohos:height="50vp"
        ohos:width="match_content"
        ohos:text="$string:VolumeAdjustment"
        ohos:text_alignment="center"
        ohos:text_size="13fp"
        ohos:multiple_lines="true"
        ohos:text_color="$color:white"
        ohos:text_font="serif"
        ohos:text_weight="1000"/>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:bottom_margin="35vp"
        ohos:orientation="horizontal"
        >
        <com.andexert.library.RippleView
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:rv_color="$color:red"
            >
            <Image
                ohos:id="$+id:img_VolumeMute"
                ohos:height="70vp"
                ohos:width="70vp"
                ohos:scale_mode="zoom_center"
                ohos:image_src="$media:ic_audio"/>
        </com.andexert.library.RippleView>
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="40vp"
            ohos:orientation="vertical"
            ohos:alignment="center"
            >
            <com.andexert.library.RippleView
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:rv_color="$color:white"
                >
                <Image
                    ohos:id="$+id:imgVolumePlus"
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:ic_plus"/>
            </com.andexert.library.RippleView>
            <ProgressBar
                ohos:id="$+id:progressbar"
                ohos:orientation="vertical"
                ohos:height="100vp"
                ohos:width="20vp"
                ohos:progress_width="10vp"
                ohos:background_instruct_element="$color:accent"
                ohos:progress_element="$color:mixed4"
                />
            <com.andexert.library.RippleView
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:rv_color="$color:white"
                >
                <Image
                    ohos:id="$+id:imgVolumeMinus"
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:ic_minus"/>
            </com.andexert.library.RippleView>
        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>