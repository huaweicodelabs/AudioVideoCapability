<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:background_element="$color:splash_red">

    <!--<Image
        ohos:id="$+id:splash_image"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:scale_x="4"
        ohos:scale_y="4"
        ohos:layout_alignment="center"
        ohos:image_src="$media:ic_launcher"
        />-->

    <com.airbnb.lottie.LottieAnimationView
        ohos:id="$+id:animationView"
        ohos:width="match_content"
        ohos:height="match_content"
        />

    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:app_Name"
        ohos:text_alignment="center"
        ohos:text_color="$color:white"
        ohos:text_size="$float:dimens_15"
        ohos:top_margin="$float:dimens_20"
        ohos:text_weight="1000"
        />
</DirectionalLayout>