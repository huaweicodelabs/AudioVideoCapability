<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:text="DASHBORD"
        ohos:text_alignment="center"
        ohos:text_weight="1000"
        ohos:text_color="$color:white"
        ohos:visibility="hide"
        ohos:background_element="$color:splash_red"/>

    <include
        ohos:id="$+id:layout_title"
        ohos:height="50vp"
        ohos:layout="$layout:layout_title"
        ohos:width="match_parent"
        ohos:align_parent_top="true"/>

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical"
        ohos:top_margin="30vp"
        ohos:weight="1"
        >
        <com.andexert.library.RippleView
            ohos:id="$+id:ripple"
            ohos:height="35vp"
            ohos:width="140vp"
            ohos:rv_color="$color:red"
            >
            <Button
                ohos:id="$+id:btnAudio"
                ohos:height="35vp"
                ohos:width="140vp"
                ohos:background_element="$graphic:background_btn"
                ohos:selection_color="$color:colorSecondaryDark"
                ohos:text="Audio"
                ohos:text_color="$color:white"
                ohos:text_font="serif"
                ohos:text_size="12vp"
                ohos:text_weight="1000"
                />
        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            ohos:below="$id:ripple"
            ohos:top_margin="$float:dimens_20"
            ohos:height="35vp"
            ohos:width="140vp"
            ohos:rv_color="$color:red"
            >
            <Button
                ohos:id="$+id:btnVideo"
                ohos:height="35vp"
                ohos:width="140vp"
                ohos:background_element="$graphic:background_btn"
                ohos:selection_color="$color:colorSecondaryDark"
                ohos:text="Video"
                ohos:text_color="$color:white"
                ohos:text_font="serif"
                ohos:text_size="12vp"
                ohos:text_weight="1000"
                />
        </com.andexert.library.RippleView>
    </DependentLayout>


</DirectionalLayout>